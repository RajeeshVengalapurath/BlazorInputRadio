@page "/"
@using Models

<EditForm Model="Car">
    <InputRadioGroup @bind-Value="Car.Color">
        <InputRadio Value="Color.Red" />Red
        <InputRadio Value="Color.White" />White
        <InputRadio Value="Color.Black" />Black
    </InputRadioGroup>
</EditForm>

@if(Car != null)
{
    @Car.Color
}

@code{
    public Car Car { get; set; }=new Models.Car();
}